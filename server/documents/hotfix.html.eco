        <div class="ui radio checkbox">
          <input name="fruit" checked="checked" type="radio" value="apple">
          <label>Apple</label>
        </div>
      </div>
      <div class="field">
        <div class="ui radio checkbox">
          <input name="fruit" type="radio" value="orange">
