<!-- TEST JS HERE !-->
<script type="text/javascript">
$(document).ready(function() {
$('.ui.dropdown')
    .dropdown()
;

$('.ui.checkbox')
    .checkbox()
;

$('.ui.serialize.button')
    .on('click', function () {
        var data = $('.ui.form').form('serialize');

        console.warn(data);
    })
;

$('.ui.form')
    .form({
        name: {
            identifier: 'name',
            rules: [
                {
                    type: 'empty',
                    prompt: 'Please enter your name'
                }
            ]
        },
        gender: {
            identifier: 'gender',
            rules: [
                {
                    type: 'empty',
                    prompt: 'Please select a gender'
                }
            ]
        },
        username: {
            identifier: 'username',
            rules: [
                {
                    type: 'empty',
                    prompt: 'Please enter a username'
                }
            ]
        },
        password: {
            identifier: 'password',
            rules: [
                {
                    type: 'empty',
                    prompt: 'Please enter a password'
                },
                {
                    type: 'length[6]',
                    prompt: 'Your password must be at least 6 characters'
                }
            ]
        },
        fruit: {
            identifier: 'fruit',
            rules: [
                {
                    type: 'checked',
                    prompt: 'You must select at least one fruit?'
                }
            ]
        },
        terms: {
            identifier: 'terms',
            rules: [
                {
                    type: 'checked',
                    prompt: 'You must agree to the terms and conditions'
                }
            ]
        }
    })
;

});
</script>

<!-- TEST CSS HERE !-->
<style type="text/css">
